	<div class="container">
		<div class="row">
			<div class="col-sm-2"></div>
		
			<div class="col-sm-4">
				<img src="css/logobgless.png">
				<div class="h1">Log In!</div>
				<form action="/login" method="post">
				<label for="basic-url">Email</label>
				<div class="input-group mb-3">
					
					<input type="email" class="form-control" id="email"  aria-label="Email" aria-describedby="basic-addon1" required name= "email">
				  </div>
				  <label for="basic-url">Password</label>
				  <div class="input-group mb-3">
					  <input type="password"  class="form-control" id="password" aria-label="password" aria-describedby="basic-addon1" required name= "password">
					</div>
					<button type="submit" class="btn btn-success btn-lg btn-block">Log In</button>
					</form>
					<br>
					<br>
					

			</div>

				<div class="col-sm-1">
				<div class="line"></div>
			</div>
			<div class="col-sm-3">
				<div class ="gmail">
